{% extends 'base.html.twig' %}

{% block title %}Classe de {{ schoolClass.name }}{% endblock %}

{% block body %}

<section class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-6 space-y-10">
        <div class="bg-white p-8 rounded-xl shadow">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Classe de {{ schoolClass.name }}</h1>
            <p class="text-gray-600">{{ schoolClass.students | length }} √©l√®ves inscrits</p>
        </div>

        <div class="bg-white p-8 rounded-xl shadow">
            <h2 class="text-2xl font-semibold text-gray-700 mb-6">√âl√®ves</h2>
            <ul class="divide-y divide-gray-200">
                {% for student in schoolClass.students %}
                    <li class="py-3 flex justify-between items-center">
                        <span class="text-gray-800">{{ student.username }}</span>
                        <a href="{{ url('view_student', {'id': student.id, 'subjectID': app.user.subject.id, 'trimester': trimester}) }}"
                        class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm transition">
                            Voir d√©tails
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-xl shadow text-center">
                <h3 class="text-gray-600 text-sm">Moyenne de la classe</h3>
                <p class="text-2xl font-bold text-indigo-600">{{ average }}</p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow text-center">
                <h3 class="text-gray-600 text-sm">Moins bonne moyenne</h3>
                <p class="text-2xl font-bold text-red-600">{{ minAverage }}</p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow text-center">
                <h3 class="text-gray-600 text-sm">Meilleure moyenne</h3>
                <p class="text-2xl font-bold text-green-600">{{ maxAverage }}</p>
            </div>
        </div>

        <div class="bg-white p-8 rounded-xl shadow">
            <h2 class="text-2xl font-semibold text-gray-700 mb-6">R√©partition des moyennes</h2>
            <canvas id="chart" class="w-full h-96"></canvas>
        </div>

        <div class="flex justify-between">
            <a href="{{ url('app_grades') }}"
                class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg shadow hover:bg-gray-300 transition">
                ‚Üê Revenir √† la classe
            </a>
            <a href="{{ url('export_schoolclass', {'id': schoolClass.id, 'trimester': trimester}) }}"
                class="inline-block px-6 py-3 bg-yellow-400 text-gray-900 font-semibold rounded-lg shadow hover:bg-yellow-500 transition">
                üìÑ Exporter le bilan des moyennes
            </a>
        </div>
    </div>
</section>

<script>
    const xValues =
    [
        {% for student in schoolClass.students %}
            "{{ student.username }}",
        {% endfor %}
    ];

    const yValues =
    [
        {% for avg in averageByStudent %}
            {{ avg }},
        {% endfor %}
    ];
    
    const ctx = document.getElementById("chart").getContext("2d");
    const myChart = new Chart(ctx,
    {
        type: "bar",
        data:
        {
            labels: xValues,
            datasets:
            [{
                label: "Moyennes",
                backgroundColor: "rgba(37,99,235,0.8)",
                borderRadius: 4,
                data: yValues
            }]
        },
        options:
        {
            responsive: true,
            scales:
            {
                yAxes:
                [{
                    ticks:
                    {
                        min: 0,
                        max: 20,
                        ticks: { stepSize: 2 }
                    }
                }]
            }
        }
    });
</script>

{% endblock %}
