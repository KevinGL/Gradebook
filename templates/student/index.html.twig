{% extends 'base.html.twig' %}

{% block title %}Liste des élèves{% endblock %}

{% block body %}

<div class="max-w-6xl mx-auto mt-10 bg-white p-8 rounded-xl shadow">
    <h1 class="text-2xl font-semibold text-gray-800 mb-6">Liste des élèves</h1>

    <div class="overflow-x-auto">
        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-indigo-600 text-white text-left">
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Classe</th>
                    <th class="px-4 py-2">Action</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}
                    <tr class="border-b hover:bg-gray-50">
                        <td class="px-4 py-2 text-gray-700">{{ student.id }}</td>
                        <td class="px-4 py-2 font-medium text-gray-800">{{ student.username }}</td>
                        <td class="px-4 py-2 text-gray-600">{{ student.class.name }}</td>
                        <td class="px-4 py-2 space-x-3">
                            <a href="{{ url('edit_student', {'id': student.id}) }}" class="text-green-600 hover:underline">Modifier</a>
                            <button id="{{ student.id }}" class="delete text-red-600 hover:underline">Supprimer</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="flex justify-center space-x-2 mt-6">
        {% for i in 1..nbPages %}
            <a href="{{ url('app_student', {'page': i}) }}"
               class="px-3 py-1 rounded-lg {{ i == app.request.get('page')|default(1) ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' }}">
                {{ i }}
            </a>
        {% endfor %}
    </div>

    <div class="mt-6 flex justify-between">
        <a href="{{ path('app_grades') }}"
           class="px-5 py-2 bg-gray-200 text-gray-700 rounded-lg shadow hover:bg-gray-300 transition">
            ← Revenir au dashboard
        </a>
        <a href="{{ url('add_student') }}"
           class="px-5 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-700 transition">
            ➕ Ajouter un élève
        </a>
    </div>
</div>

<div id="modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-40 hidden">
    <div class="bg-white p-6 rounded-lg shadow-lg w-96">
        <p class="text-gray-800 mb-6">Êtes-vous sûr de vouloir supprimer cet élève ?</p>
        <div class="flex justify-end space-x-4">
            <button id="delete_no"
                    class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition">
                Annuler
            </button>
            <button id="delete_yes"
                    class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition">
                Supprimer
            </button>
        </div>
    </div>
</div>

<script>
    const buttons_delete = Array.from(document.getElementsByClassName("delete"));
    const modal = document.getElementById("modal");
    let idDelete = "";

    buttons_delete.map((b) =>
    {
        b.addEventListener("click", () =>
        {
            idDelete = b.id;
            modal.classList.remove("hidden");
        });
    });

    document.getElementById("delete_yes").addEventListener("click", () =>
    {
        window.location.href = "/student/delete/" + idDelete;
    });

    document.getElementById("delete_no").addEventListener("click", () =>
    {
        modal.classList.add("hidden");
    });
</script>
{% endblock %}
