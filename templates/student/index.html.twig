{% extends 'base.html.twig' %}

{% block title %}Liste des élèves{% endblock %}

{% block body %}

<div>
    <h1>Liste des élèves</h1>

    <div>
        {% for i in 1..nbPages %}
            <a href="{{ url('app_student', {'page': i}) }}">{{ i }}</a>
        {% endfor %}
    </div>

    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>Nom</th>
                <th>Classe</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for student in students %}
                <tr>
                    <th>{{ student.id }}</th>
                    <td>{{ student.username }}</td>
                    <td>{{ student.class.name }}</td>
                    <td>
                        <a href="{{ url('edit_student', {'id': student.id}) }}">Modifier</a>
                        <button id="{{ student.id }}" class="delete">Supprimer</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div>
        {% for i in 1..nbPages %}
            <a href="{{ url('app_student', {'page': i}) }}">{{ i }}</a>
        {% endfor %}
    </div>

    <a href="{{ url('add_student') }}">Ajouter un élève</a>
</div>

<div id="modal" hidden>
    Êtes-vous sûr de vouloir supprimer cet élève ?
    <button id="delete_yes">Oui</button>
    <button id="delete_no">Non</button>
</div>

<script>
    const buttons_delete = Array.from(document.getElementsByClassName("delete"));
    const modal = document.getElementById("modal");
    let idDelete = "";

    buttons_delete.map((b) =>
    {
        b.addEventListener("click", () =>
        {
            idDelete = b.id;
            modal.hidden = false;
        });
    });

    document.getElementById("delete_yes").addEventListener("click", () =>
    {
        window.location.href = "/student/delete/" + idDelete;
    });

    document.getElementById("delete_no").addEventListener("click", () =>
    {
        modal.hidden = true;
    });
</script>
{% endblock %}
