{% extends 'base.html.twig' %}

{% block title %}Ajouter un élève{% endblock %}

{% block body %}
    <div class="max-w-lg mx-auto mt-10 bg-white p-8 rounded-xl shadow">
        <h1 class="text-2xl font-semibold text-gray-800 mb-6">Ajouter un élève</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                {{ form_label(form.username, 'Nom de l\'élève', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.username,
                    {
                        'attr':
                        {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
                        }
                    })
                }}
            </div>

            <div>
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.password,
                    {
                        'attr':
                        {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
                        }
                    })
                }}
            </div>

            <div>
                {{ form_label(form.class, 'Classe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.class,
                    {
                        'attr':
                        {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
                        }
                    })
                }}
            </div>

            <div class="flex justify-end space-x-4">
                <a href="{{ url('app_student', {'page': 1}) }}"
                class="px-5 py-2 bg-gray-200 text-gray-700 rounded-lg shadow hover:bg-gray-300 transition">
                    Annuler
                </a>
                <button type="submit"
                        class="px-5 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-700 transition">
                    ➕ Ajouter
                </button>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
