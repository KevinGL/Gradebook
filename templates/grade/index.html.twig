{% extends 'base.html.twig' %}

{% block title %}Dashboard - {{ app.user.username }}{% endblock %}

{% block body %}

<section class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">
            Bienvenue, <span class="text-indigo-600">{{ app.user.username }}</span> ðŸ‘‹
        </h1>

        {% if "ROLE_TEACHER" in app.user.roles %}
            <h2 class="text-2xl font-semibold text-gray-700 mb-6">Vos classes</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for class in app.user.schoolClasses %}
                <div class="bg-white rounded-xl shadow hover:shadow-lg transition p-6 flex flex-col">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">{{ class.name }}</h3>
                    <div class="flex flex-col space-y-2">
                        <a href="{{ url('view_schoolclass', {'id': class.id, 'trimester': 1}) }}" class="px-3 py-2 bg-indigo-50 text-indigo-700 rounded-lg hover:bg-indigo-100 text-sm">Trimestre 1</a>
                        <a href="{{ url('view_schoolclass', {'id': class.id, 'trimester': 2}) }}" class="px-3 py-2 bg-indigo-50 text-indigo-700 rounded-lg hover:bg-indigo-100 text-sm">Trimestre 2</a>
                        <a href="{{ url('view_schoolclass', {'id': class.id, 'trimester': 3}) }}" class="px-3 py-2 bg-indigo-50 text-indigo-700 rounded-lg hover:bg-indigo-100 text-sm">Trimestre 3</a>
                    </div>
                </div>
                {% endfor %}
            </div>

        {% elseif "ROLE_STUDENT" in app.user.roles %}
            <div class="space-y-8">
                <div class="bg-white p-6 rounded-xl shadow">
                    <h2 class="text-xl font-semibold text-gray-700 mb-4">Votre classe</h2>
                    <p class="text-gray-600">Vous Ãªtes en <span class="font-medium">{{ app.user.class.name }}</span></p>
                </div>

                <div class="bg-white p-6 rounded-xl shadow">
                    <h2 class="text-xl font-semibold text-gray-700 mb-4">Vos moyennes</h2>
                    <ul class="divide-y divide-gray-200">
                        {% for key, value in averages %}
                        <li class="py-2 flex justify-between">
                            <span class="text-gray-700">{{ key }}</span>
                            <span class="font-semibold text-indigo-600">{{ value }}</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="bg-white p-6 rounded-xl shadow">
                    <h2 class="text-xl font-semibold text-gray-700 mb-4">Vos enseignants</h2>
                    <ul class="divide-y divide-gray-200">
                        {% for key, value in teachers %}
                        <li class="py-2 flex justify-between">
                            <span class="text-gray-700">{{ key }}</span>
                            <span class="text-gray-500">{{ value }}</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                {% for i in 1..3 %}
                <div class="bg-white p-6 rounded-xl shadow">
                    <h2 class="text-xl font-semibold text-gray-700 mb-4">Trimestre {{ i }}</h2>
                    <div class="flex flex-wrap gap-3">
                    {% for subject in subjects %}
                        <a href="{{ url('view_student', {'id': app.user.id, 'subjectID': subject.id, 'trimester': i}) }}"
                            class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm">
                            {{ subject.name }}
                        </a>
                    {% endfor %}
                    </div>
                </div>
                {% endfor %}
            </div>

        {% elseif "ROLE_ADMIN" in app.user.roles %}
            <div class="grid md:grid-cols-2 gap-6">
                <a href="{{ url('app_teacher', {'page': 1}) }}" class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition text-center">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Liste des enseignants</h2>
                    <p class="text-gray-600">GÃ©rer les enseignants</p>
                </a>
                <a href="{{ url('app_student', {'page': 1}) }}" class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition text-center">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Liste des Ã©lÃ¨ves</h2>
                    <p class="text-gray-600">GÃ©rer les Ã©lÃ¨ves</p>
                </a>
            </div>
        {% endif %}
    </div>
</section>

{% endblock %}
